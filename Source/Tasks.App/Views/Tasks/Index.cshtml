@model Tasks.App.Models.ContextIndexModel

@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks</h2>

<div>

    <ul>
    @foreach(var task in Model.Tasks)
    {
        <li>@task.Title - @Html.ActionLink("Complete", "CompleteTask", new { id = task.TaskId })</li>
    }
    </ul>

</div>


@Html.ActionLink("Create task", "Create")

<h2>Notes</h2>

<div>

    <ul>
    @foreach(var note in Model.Notes)
    {
        <li>@note.Title - @note.DescriptionRaw</li>
    }
    </ul>

</div>


@Html.ActionLink("Create note", "CreateNote")